{
  "name": "fafnir-bot",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx src/fafnir-bot.ts",
    "start:enhanced": "tsx src/fafnir-bot-enhanced.ts",
    "start:multi-strategy": "tsx src/fafnir-multi-strategy-bot.ts",
    "dry-run": "tsx src/dry-run.ts",
    "start:trend": "tsx src/trend-strategy.ts",
    "test:strategies": "tsx src/test-strategies.ts",
    "test:buy-gala": "tsx src/test-buy-gala.ts",
    "profit-report": "tsx -e 'import { profitTracker } from \"./src/profit-tracker.js\"; await profitTracker.generateReport()'",
    "risk-report": "tsx -e 'import { riskManager } from \"./src/risk-manager.js\"; console.log(await riskManager.generateRiskReport())'",
    "test:spider": "tsx -e 'import { LiquiditySpiderStrategy } from \"./src/strategies/liquidity-spider-strategy.js\"; const s = new LiquiditySpiderStrategy(); console.log(await s.execute())'",
    "pool-report": "tsx -e 'import { poolMonitor } from \"./src/pool-monitor.js\"; console.log(await poolMonitor.getPoolReport())'",
    "pool-snapshot": "tsx -e 'import { poolMonitor } from \"./src/pool-monitor.js\"; const snapshot = await poolMonitor.createPoolSnapshot(); console.log(JSON.stringify(snapshot, null, 2))'",
    "monitor-pools": "tsx -e 'import { poolMonitor } from \"./src/pool-monitor.js\"; poolMonitor.startLiveMonitoring(30000); console.log(\"Pool monitoring started - press Ctrl+C to stop\")'",
    "crossdex-report": "tsx -e 'import { crossDexMonitor } from \"./src/cross-dex-monitor.js\"; const prices = new Map([[\"GALA\", 0.02]]); console.log(await crossDexMonitor.generateCrossDexReport(prices))'",
    "discover:pools": "npx tsx src/discover-pools.ts",
    "enhanced:trend": "npx tsx src/enhanced-trend-strategy.ts",
    "test:enhanced-trend": "npx tsx src/test-enhanced-trend.ts",
    "dca:fib": "npx tsx src/dca-fibonacci-runner.ts",
    "test:dca-fib": "npx tsx src/test-dca-fibonacci.ts",
    "dashboard": "npx tsx src/web-dashboard-server.ts",
    "api": "npx tsx src/api-server.ts",
    "arbitrage": "npx tsx src/arbitrage-runner.ts",
    "test:arbitrage": "ARB_DRY_RUN=true npx tsx src/arbitrage-runner.ts",
    "monitor-crossdex": "tsx -e 'import { crossDexMonitor } from \"./src/cross-dex-monitor.js\"; const prices = new Map([[\"GALA\", 0.02]]); crossDexMonitor.startMonitoring(prices, 120000); console.log(\"Cross-DEX monitoring started\")'",
    "test:enhanced": "npx tsx src/test-enhanced-bot.ts",
    "test:all": "npm run test:enhanced && npm run test:strategies",
    "test:triangular-only": "npx tsx -e \"process.env.FORCE_STRATEGY='triangular'; import('./src/fafnir-bot-enhanced.js')\"",
    "test:arbitrage-only": "npx tsx -e \"process.env.FORCE_STRATEGY='arbitrage'; import('./src/fafnir-bot-enhanced.js')\"",
    "test:fibonacci-only": "npx tsx -e \"process.env.FORCE_STRATEGY='fibonacci'; import('./src/fafnir-bot-enhanced.js')\"",
    "test:spider-only": "npx tsx -e \"process.env.FORCE_STRATEGY='liquidity-spider'; import('./src/fafnir-bot-enhanced.js')\"",
    "build": "tsc",
    "dev": "tsx --watch src/fafnir-bot-enhanced.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@gala-chain/api": "^2.4.3",
    "@gala-chain/client": "^2.4.3",
    "@gala-chain/connect": "^2.4.3",
    "@gala-chain/gswap-sdk": "^0.0.7",
    "@metamask/sdk": "^0.33.0",
    "@ton/ton": "^14.0.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "fs-extra": "^11.2.0",
    "viem": "^2.37.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.11",
    "@types/ws": "^8.18.1",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4"
  }
}
